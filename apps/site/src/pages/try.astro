---
import Shell from '../layouts/shell.astro';
---

<style is:global>
  body {
    height: 100vh;
  }
</style>
<style>
  .background {
    background-color: #8331c6;
    width: 100%;
    height: calc(100vh - 53px);
    color: white;
  }

  .container {
    display: flex;
    max-width: 1080px;
    margin: auto;
    align-items: center;
    justify-content: center;
    height: 100%;
    flex-direction: column;
    gap: 3rem;
  }

  h1 {
    color: white;
    font-weight: 500;
    text-align: center;
    margin: 0;
  }

  div.columns {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
  }

  h2 {
    font-weight: 400;
    margin: 0;
  }
</style>

<Shell title="Nospace: Playground">
  <div class="background">
    <div class="container">
      <h1>Try Nospace</h1>

      <div class="columns">
        <div>
          <h2>In your browser</h2>
        </div>

        <div>
          <h2>Via npm</h2>
        </div>
      </div>
    </div>
  </div>
</Shell>
